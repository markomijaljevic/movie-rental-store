@model MovieRentalStore.Models.Movies


@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.Date.ToShortDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

